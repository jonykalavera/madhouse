[core]
    autocrlf = input
    pager = delta

[user]
    email = mr.jony@gmail.com
    name = Jony Kalavera

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true    # use n and N to move between diff sections
    side-by-side = true


    # delta detects terminal colors automatically; set one of these to disable auto-detection
    # dark = true
    # light = true

[merge]
    tool = meld
    conflictstyle = diff3

[init]
	defaultBranch = main

[diff]
    tool = meld
    colorMoved = default

[difftool]
    prompt = false

[difftool "meld"]
    cmd = meld "$LOCAL" "$REMOTE"
